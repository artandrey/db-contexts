{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "~core/*": ["src/core/*"],
      "~modules/*": ["src/modules/*"]
    }
  }
}
